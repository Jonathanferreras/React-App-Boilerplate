{
    "env": {
      "browser": false,
      "commonjs": true,
      "es6": true
  },
  "parserOptions": {
    "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "jsx": true
    },
    "sourceType": "module"
  },
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "rules": {
    "react/jsx-indent": [
      "error", 2
    ],
    "semi": [
      "warn",
      "always"
    ]
  },
  "extends": [
    "plugin:react/recommended"    
  ]
}